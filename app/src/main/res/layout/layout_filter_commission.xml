<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ljj"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="right"
        android:background="@drawable/commssion_layout_bg">
        <TextView
            android:id="@+id/resetDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Date"
            android:textSize="20sp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lll"
        android:layout_below="@+id/ljj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fromDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:textStyle="bold"
            android:hint="From Date"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/eddittext"
            />
        <TextView
            android:id="@+id/toDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="To Date"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/eddittext"
            android:padding="10dp"/>
    </LinearLayout>


    <Button
        android:id="@+id/applyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lll"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        android:text="Apply" />

</RelativeLayout>